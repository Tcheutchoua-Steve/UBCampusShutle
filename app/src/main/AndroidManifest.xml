<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steeboon.steve.ubshuttle" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandingMenu"
            android:label="@string/title_activity_landing_menu"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steeboon.steve.ubshuttle.MainActivity" />
        </activity>
        <activity
            android:name=".GenInfo"
            android:label="@string/title_activity_gen_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steeboon.steve.ubshuttle.MainActivity" />
        </activity>
        <activity
            android:name=".BusSchedule"
            android:label="@string/title_activity_bus_schedule"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steeboon.steve.ubshuttle.MainActivity" />
        </activity>
        <activity
            android:name=".Drivers"
            android:label="@string/title_activity_drivers"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steeboon.steve.ubshuttle.MainActivity" />
        </activity>
    </application>

</manifest>
